<h1>Editing Book</h1>
<% if @book.errors.any? && @book.errors.count == 1 %>
  <div id = "error_explanation">
    <h2>1 error prohibited this book form being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% elsif @book.errors.any? && @book.errors.count != 1 %>
  <div id = "error_explanation">
    <h2><%= @book.errors.count %> errors prohibited this book form being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class = "field">
    <h4>Title</h4>
    <%= f.text_field:title %>
  </div>
  <div class = "field">
    <h4>Body</h4>
    <%= f.text_area:body %>
  </div>
  <div class = "actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<p><%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %></p>
