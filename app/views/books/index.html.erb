<!--indexの画面-->
<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    <th></th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>Show</td>
    <td>Edit</td>
    <td>Destroy</td>
  </tr>
  <% end %>
  <tr></tr>
</table>



<!--newの画面-->
<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

 <h4>Title</h4>
 <%= f.text_field:title %>

 <h4>Body</h4>
 <%= f.text_area:body %>

 <%= f.submit 'Create Book' %>
<% end %>


